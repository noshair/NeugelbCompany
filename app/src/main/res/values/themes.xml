<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noshair" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your theme here. -->
        <style name="bottom_navigation_text_style">
            <item name="android:textSize">10sp</item>
            <item name="android:textAllCaps">false</item>
        </style>

        <!--    DatePicker Style-->
        <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
            <item name="colorPrimary">@color/design_default_color_primary</item>
            <item name="colorAccent">@color/material_dynamic_primary10</item>
            <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        </style>
</resources>